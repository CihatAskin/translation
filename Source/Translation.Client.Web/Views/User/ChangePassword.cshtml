@model ChangePasswordModel

<h1 data-translation="@Model.Title">@Model.Title</h1>

<form id="ChangePassword" method="post">
    <partial name="Components/_Hidden" model="@Model.UserUidInput" />

    <partial name="Components/_Password" model="@Model.OldPasswordInput" />
    <partial name="Components/_Password" model="@Model.NewPasswordInput" />
    <partial name="Components/_Password" model="@Model.ReEnterNewPasswordInput" />

    <partial name="Components/_ErrorMessages" model="@Model.ErrorMessages" />

    <button type="submit" data-translation="change_password_button">change_password_button</button>
</form>